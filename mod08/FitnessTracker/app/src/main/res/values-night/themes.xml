<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->

  <style name="Theme.FitnessTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/blue_light_tt</item>
    <item name="colorPrimaryVariant">@color/status_bar_dark</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/blue_light</item>
    <item name="colorSecondaryVariant">@color/blue_light</item>
    <item name="colorOnSecondary">@color/black</item>

    <item name="actionBarStyle">@style/Custom.ActionBar</item>

    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="Custom.ActionBar" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
    <item name="background">@color/header_color</item>
  </style>

  <style name="BakcgroundColor">
    <item name="android:background">@color/bgPrimary</item>
  </style>

  <style name="TextViewForm">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">30dp</item>
    <item name="android:layout_marginEnd">30dp</item>
    <item name="android:layout_marginBottom">40dp</item>
  </style>

  <style name="TextInputLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">30dp</item>
    <item name="android:layout_marginEnd">30dp</item>
    <item name="android:layout_marginBottom">40dp</item>
  </style>

  <style name="TextInputEdit">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@color/bgInput</item>
    <item name="android:inputType">number</item>
    <item name="android:maxLength">3</item>
  </style>

  <style name="ButtonStyle">
    <item name="android:layout_width">wrap_content</item>item>
    <item name="android:layout_height">40dp</item>
    <item name="android:layout_marginBottom">40dp</item>
    <item name="android:background">@drawable/bg_button_accent</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:paddingEnd">20dp</item>
    <item name="android:paddingStart">20dp</item>
  </style>
</resources>